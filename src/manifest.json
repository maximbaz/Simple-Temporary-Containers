{
  "manifest_version": 2,
  "name": "Simple Temporary Containers",
  "version": "0.1.0",
  "description": "Create and destroy temporary containers.",
  "icons": {
    "48": "icons/feather/plus-square.svg",
    "96": "icons/feather/plus-square.svg"
  },

  "permissions": [
    "contextualIdentities",
    "cookies",
    "menus"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Open a new temporary container tab"
    }
  },

  "browser_action": {
    "default_icon": "icons/feather/plus-square.svg",
    "default_title": "Open a new temporary container tab"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
